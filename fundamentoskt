        if((idade >= 12 &&  comidentidade == true) || compais == true){
            println("aproveitem o show... meno")
        }else{
            println("tu nao pode entra")
            
        }
        
        
        
        
    }else{   
        println(" aproveite o show")
        
    }
    */
    // exercicios -> no metroidvaina, para o hero ir para a tela de
    // gameover
    // seus coracoes preciisam ser igual a zero e
    // suas vidas precisam ser menos ou igual a zero
    
    // simule com operadores logicos quando ele vai para o gameover
    // e quando ele nao vai
  /*  
    var coracoes = 5
    var vidas = 1
    var morte = 0
      if(coracoes < vidas)
           println("voce esta morto")
      }else if(morte == 0 && vidas<= 0 ){
           println("game over")
      }else(morte < vidas ){
           println("voce esta vivo")
    
    
      }  
    */
    
    // when - quando
    // 
    // comparacao de quando um valor for igual a um determinado valor,
    // uma determinada acao sera executada
    // 
    // estrutura do when
    // 
    // var auciliar = valor
    // 
    // when(auciliar){
    // 
    // valor -> {acao}
    // valor -> {acao}
    // valor -> {acao}
    // valor -> {acao}
    // valor -> {acao}
    // else -> {acao}
    // }
    // sera usado geralmente quando durante o programa o valor da variavel
    // nao for estatico, ou seja, ele estiver mudado
    // 
   /* 
    var mes = 2
    
    when(mes){
        1 -> {println("lisboa")}
        2 -> {println("franca")}
        3 -> {println("bolivia")}
        4 -> {println("alasca")}
        5 -> {println("amazonas")}
        6 -> {println("madri")}
        7 -> {println("china")}
        8 -> {println("russia")}
        9 -> {println("zelandia")}
        10 -> {println("indonesia")}
        11 -> {println("mexico")}
        12 -> {println("filipinas")}
        else -> {println("acordou!!!")}
   
 }
    // exercicios -> escreva um programa em kotlin que declare uma variavel chamado
    // "diasemana" do tipo sting, que represente um dia da semana. em seguida, utilize a
    // declaracao "when" para exibiruma mensagem na tela informando se o dia da semana é 
    // um dia util ou um final d semana.
*/
    
    var diaSemana = "terca"
    
    when(diaSemana){
        
         "segunda",
         "terca",
         "quarta",
         "quinta",
         "sexta"->{println("estudar")}
         "sabado", "domingo" ->{println("fds cria")}
        else ->{println("escreve direito")}
        
       
    }
    
    
}
/--------------------------------------------------------------
fun main() {
    
    // lacos se erpeticao - loops
    // 
    // repeat - repita
    // while - enquanto
    // do...while - faca..enquanto
    // for - para
    // 
    // repeat - repita
    // vai repetir uma determinada ação uma determinada quantidade de vezes
    // 
    // estrutura do repeat
    // 
    // repeat(numeroVezes){
    // ação
    // }
    /*
    repeat(8){
        println("isso e um teste, testando, testando")
    }
    
    // exercicio -> faca um programa com auxilio de uma variavel contador,
    // no qual nela sear acrescentado 1 a cada repeticao,
    // ate que de a quantidade de vezes decidida 
    */
    var pão = 10
    var repetir = 0
    /*
    //o joao foi comprar 10 pães, ninguem atendeu ele então ele começou a gritar quero pão
    repeat(pão){
        repetir++
        println("quero pão!!! $repetir")
    }
    */
    // laco while - enquanto
    // 
    // enquanto uma condição for verdadeira, uma determinada ação estará sendo executada
    // estrutura do while
    // 
    // while(condição){
    // ação
    // }
    /*
    var contador = 0
    while(contador < 10){
        println(contador++)
    }
    */
    // exercicios -> simulador d bateria de celular
    // faça um programa com while que mostre s bateria 100% diminuindo.
    // quando ela chegar no 15, deve mostra a mensagem pedindo para
    // conectar o carregador, e quando ghegar a 0, deve mostra a mensagem
    // aparelho desligando
    var contador = 0
    while(contador == 100){
        println
    }
    while(contador == 15)
    while(contador == 0)

}
