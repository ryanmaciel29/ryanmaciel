    println(list1) // exibir  lista
    println(list1.size) // retonar o tamanho da lista
    println(list1.lastIndex) // retorna o último index
    println(list1[2]) // exibir o valor de um determonado index
    println(list1.contains("tartaruga")) // compra se existe um determonado valor dentro da lista
    println(list1.indexOf(0)) // indica o index de um determonado valor
    println(list1.lastIndexOf(0.1)) // indicar o último de um determnado valor
    println(list1.first()) // o volor do primeiro index
    println(list1.last()) // o valor do ultimo index
    println(list1.isEmpty()) // comparar se a lista esta vazia
    
