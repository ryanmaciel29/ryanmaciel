    var bateria = 100
    
    while(bateria >= 0){
        println("$bateria%")
        
        when(bateria){
            15 -> {println("aparelho descarregando, conecte no caregador")}
            0 -> println("aparelho desligando!")
        }
        bateria--
    }
    */
    // while -> ENQUANTO uma determinada condição for verdadeira, uma determinada ação será
    // executada
    /*
    var contador = 0
    while(contador < 10){
        println(contador++)
    }
    */
    // do..while
    // 
    // uma determinada ação será exacutada, ENQUANTO uma determinnada condição for
    // verdadeira
    // 
    // do{
    // ação
    // }while(condição)
    /*
    var contador = 0
    
    do{
        println(contador++)
    }while(contador <= 10)
    */
    // for - para...
    // 
    // PARA cada item em um intervalo ou colection, uma determinada ação será executada 
    // estrutura 
    // 
    // for(vAuxilio in intervalo ou colection){
    // ação
    // }
    // 
      
    for(pneu in 1..4){
        println("1 pneu")
    }      
    
    for(pneu in 0..3){
        println(pneu + 1)
    }
    
    // EXERCICIO -> faça uma tabuada até o décimo multiplo de um numero escolido,
    // utilizando o laço for 
    // em excessão as tabuadas do 1, 2 e 3
               
    

}
